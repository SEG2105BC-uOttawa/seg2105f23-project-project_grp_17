<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".MainActivity"
    >

    <ImageView
        android:layout_width="167dp"
        android:layout_height="131dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/baseline_handyman_24"
        app:tint="#FF5733" />


    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        app:cardCornerRadius="30dp"
        app:cardElevation="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="10dp"
            android:text="What do you want to do?"
            android:textSize="24sp"

            android:textStyle="bold" />

        <GridLayout
            android:layout_width="wrap_content"
            android:layout_height="241dp"
            android:layout_gravity="center"
            android:columnCount="2"

            android:padding="19dp"
            android:rowCount="2">

            <Button
                android:layout_width="wrap_content"
                android:textColor="#FFF"
                android:backgroundTint="#ff4b4b"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:padding="15dp"
                android:id="@+id/deleteEvent_btn"
                android:text="Delete Event"
                android:textSize="15sp"
                android:textStyle="bold" />

            <Button
                android:id="@+id/editEvent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="#ff4b4b"
                android:padding="15dp"
                android:text="Edit Event"
                android:textColor="#FFF"
                android:textSize="15sp"
                android:textStyle="bold" />

        </GridLayout>

    </androidx.cardview.widget.CardView>

    <Button
        android:id="@+id/goToHomepageAdmin"
        android:backgroundTint="#ab4bff"
        android:textColor="#FFFF"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:text="Return to Admin Homepage"
        android:textSize="15sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="232dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:padding="15dp"
        android:backgroundTint="#4ba0ff"
        android:textColor="#FFFF"
        android:text="Return to Login"
        android:textSize="15sp"
        android:textStyle="bold" />

</LinearLayout>