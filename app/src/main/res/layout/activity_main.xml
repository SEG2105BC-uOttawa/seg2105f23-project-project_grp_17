<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="392dp"
        android:layout_height="395dp"
        android:gravity="center"
        tools:layout_editor_absoluteX="3dp"
        tools:layout_editor_absoluteY="276dp">>

        <GridLayout
            android:layout_width="314dp"
            android:layout_height="332dp"
            android:columnCount="1"
            android:rowCount="3">

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Plan Ride" />

            <TextView android:text="Rides are collaborative activities." />

            <TextView android:text="IMAGE HERE" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ride History" />

            <TextView android:text="IMAGE HERE" />


            <TextView android:text="View past rides and get ride data." />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Explore Clubs" />

            <TextView android:text="IMAGE HERE" />


            <TextView android:text="Edit your joined clubs or explore club directory." />

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View Stats" />

            <TextView android:text="IMAGE HERE" />


            <TextView android:text="View and edit awards and records." />
        </GridLayout>


    </LinearLayout>

    <TextView
        android:id="@+id/welcome_text"
        android:layout_width="343dp"
        android:layout_height="80dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Welcome"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:layout_width="126dp"
        android:layout_height="50dp"
        android:text="My Profile"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="167dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="You are currently signed in as a User"
        tools:layout_editor_absoluteX="92dp"
        tools:layout_editor_absoluteY="125dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="What would you like to do?"
        tools:layout_editor_absoluteX="107dp"
        tools:layout_editor_absoluteY="242dp" />


</androidx.constraintlayout.widget.ConstraintLayout>
